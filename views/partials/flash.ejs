<!-- 顯示在template中 -->
<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show" role="alert" class="flash">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if(error && error.length){ %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert" class="flash">
                <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>