<% layout('layouts/boilerplate') %>
    <div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <div class="card-body">
                        <img src="https://images.unsplash.com/photo-1551256817-e6099a18ad79?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1158&q=80"
                            alt="" class="card-img-top">
                        <h5 class="card-title mt-3">Register</h5>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus
                                    required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">E-mail</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success mt-3">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>